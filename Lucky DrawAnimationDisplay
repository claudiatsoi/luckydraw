<body>
  <h1 id="prize-title">üéÅ Prize Draw</h1>
  <div class="slot">
    <div class="roller" id="roller1"></div>
    <div class="roller" id="roller2"></div>
    <div class="roller" id="roller3"></div>
  </div>

  <script>
    const channel = new BroadcastChannel("lucky_draw_channel");

    channel.onmessage = (e) => {
      const data = e.data;
      if (data?.type === "draw" && data.entries?.length) {
        startAnimation(data.prize, data.entries);
      }
    };

    function startAnimation(prize, entries) {
      document.getElementById("prize-title").textContent = `üéâ ${prize}`;
      const [a = "?", b = "?", c = "?"] = entries[0];

      rollTo("roller1", a, 0);
      rollTo("roller2", b, 600);
      rollTo("roller3", c, 1200);
    }

    function rollTo(id, value, delay) {
      const el = document.getElementById(id);
      el.innerHTML = "";
      const span = document.createElement("span");
      span.textContent = value;
      span.style.top = "-100%";
      span.style.animationDelay = `${delay}ms`;
      el.appendChild(span);
    }
  </script>
</body>
