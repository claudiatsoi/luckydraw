      height: 100vh;
      overflow: hidden;
    }

    h1#prize-title {
      font-size: 3rem;
      margin-bottom: 40px;
      text-shadow: 2px 2px 4px #000;
    }

    .slot {
      display: flex;
      gap: 30px;
    }

    .roller {
      width: 200px;
      height: 60px;
      border-radius: 10px;
      background: #111;
      border: 2px solid #fff;
      font-size: 2rem;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      position: relative;
      box-shadow: 0 0 20px rgba(255,255,255,0.2);
    }

    .roller span {
      position: absolute;
      animation: roll 2s ease-out forwards;
    }

    @keyframes roll {
      0% {
        top: -100%;
        opacity: 0;
      }
      50% {
        top: 0;
        opacity: 1;
      }
      100% {
        top: 0;
        opacity: 1;
      }
    }
